    "vitest": "^1.2.0"
  },
  "resolutions": {
    "shikiji": "^0.10.0-beta.3",
    "shikiji-transformers": "^0.10.0-beta.3",
    "shikiji-twoslash": "^0.10.0-beta.3",
    "twoslash": "workspace:*",
    "twoslash-vue": "workspace:*",
    "vitepress-plugin-twoslash": "^0.10.0-beta.3"
