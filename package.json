    "@typescript/vfs": "1.5.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vueuse/core": "^10.7.2",
    "bumpp": "^9.2.1",
    "eslint": "^8.56.0",
    "esno": "^4.0.0",
    "fast-glob": "^3.3.2",
    "jiti": "^1.21.0",
    "lint-staged": "^15.2.0",
    "lz-string": "^1.5.0",
    "mlly": "^1.5.0",
    "pretty-format": "^29.7.0",
